		"css-loader": "^1.0.0",
		"path": "^0.12.7",
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"serverless": "^1.41.1",
		"serverless-finch": "^2.3.2",
		"serverless-webpack": "^5.2.0",
		"style-loader": "^0.23.1",
		"ts-loader": "^5.4.4",
		"url-loader": "^1.1.2",
		"webpack": "^4.30.0"
	},
	"devDependencies": {
		"@types/aws-lambda": "^8.10.24",
